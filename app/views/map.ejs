  <script>
    // 사이드바의 너비를 토글하는 함수
    function toggleSidebar() {
      let container = document.querySelector('.container');
      let content = document.querySelector('.content');

      // 사이드바의 너비를 토글
      container.style.width = (container.offsetWidth === 60) ? '420px' : '60px';
      // 너비가 420px이면 추가된 콘텐츠를 보이게 하고, 그렇지 않으면 숨김
      content.style.display = (container.offsetWidth === 420) ? 'block' : 'none';

      if (container.offsetWidth == 420) {
        console.log('Toggle button clicked!');
      }
    }
  </script>


